<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddTipFragment"
    android:background="@color/cardview_light_background"
    android:padding="5dp">

    <EditText
        android:id="@+id/amount_paid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Paid Amount"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"/>

    <EditText
        android:id="@+id/custom_tip"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Custom Tip"
        app:layout_constraintTop_toBottomOf="@id/amount_paid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"/>

    <Button
        android:id="@+id/ten_percent_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="10%"
        app:layout_constraintTop_toBottomOf="@id/custom_tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/fifteen_percent_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="15%"
        app:layout_constraintTop_toBottomOf="@id/ten_percent_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/twenty_percent_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="20%"
        app:layout_constraintTop_toBottomOf="@id/fifteen_percent_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/finish_tipping_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Finish Tipping"
        app:layout_constraintTop_toBottomOf="@id/twenty_percent_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>




</android.support.constraint.ConstraintLayout>